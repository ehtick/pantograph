{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "nodenext",
    "strict": true,
    "preserveSymlinks": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "examples"]
}
